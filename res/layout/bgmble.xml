<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="1" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#0062C2"
        android:gravity="center"
        android:orientation="horizontal" >

        

        <LinearLayout
            android:id="@+id/bpmble_username_linear"
            android:layout_width="120dp"
            android:layout_height="53dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/bpmble_username_textView"
                android:layout_width="120dp"
                android:layout_height="53dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/bpmble_username_imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:src="@drawable/down" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/bpmble_time_linear"
            android:layout_width="120dp"
            android:layout_height="53dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/bpmble_time_textView"
                android:layout_width="120dp"
                android:layout_height="53dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/bpmble_time_imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:src="@drawable/down" />
        </LinearLayout>

        <!--
        <Spinner
            android:id="@+id/bpmble_time_spinner"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" />
        -->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/showdata"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="请选择用户和时间"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/showconn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/no_connect" />
    </LinearLayout>

</LinearLayout>